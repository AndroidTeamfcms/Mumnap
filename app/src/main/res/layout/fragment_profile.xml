<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fcms.crptrls.i9930.croptrailsfcms.Landing.Fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity"
            android:background="#f1f1f1"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/farmer_profile_photo"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:elevation="4dp"
                    android:background="@drawable/rounded_lay_for_farmer_profile"
                    android:src="@drawable/ic_person_white_24dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_toRightOf="@id/farmer_profile_photo"
                    android:id="@+id/capture_image_profile"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_85sdp"
                    android:layout_marginLeft="-15dp"
                    android:background="@drawable/rounded_bg_for_camera_crop"
                    android:elevation="4dp"
                    android:src="@drawable/ic_camera_alt_white_24dp"

                    />

                <TextView
                    android:id="@+id/sv_user_name"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_below="@id/farmer_profile_photo"
                    android:textColor="@color/new_theme_dark"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mayur123"
                    android:textSize="@dimen/_20ssp" />

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/sv_user_name"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:textColor="@color/new_theme_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="8 Johari Palace, Indore"
                    android:textSize="@dimen/_15ssp" />

            </RelativeLayout>
            <!--name-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="10dp">

                <LinearLayout
                    android:background="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:drawableLeft="@drawable/ic_account_box_black_24dp"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:text="Mayur Nagdev"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!--end of name-->

            <!--Father's name-->

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:elevation="10dp">

                <LinearLayout
                    android:background="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fatherName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:text="Manohar Nagdev"

                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!--end of father's name-->

            <!--DOB-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#ffffff">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/DOB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:drawableLeft="@drawable/ic_date_range_black_24dp"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:text="16/08/1996"

                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!--end of DOB-->

            <!--mobile-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#ffffff">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:text="9424595666"

                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!--end of mobile-->

            <!--email-->

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#ffffff">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:drawableLeft="@drawable/ic_email_black_24dp"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:padding="20dp"
                        android:text="mayurnagdev123@gmail.com"

                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!--end of email-->

        </LinearLayout>
    </ScrollView>

</FrameLayout>
